@using BriskChat.Web.Models.Room
@using Microsoft.AspNetCore.Mvc.Rendering
@model BriskChat.Web.Models.Room.CreateNewRoomViewModel

<div class="ui basic create-room modal">
    <h1>Create a private channel</h1>
    <label>Channels are where your team communicates. They're the best when organized around a topic - #leads for example</label>

    @using (Html.BeginForm(FormMethod.Post, false, new { @class = "ui large form", id = "createChanelForm"} ))
    {
        <div class="content">
            <div class="row" style="display: flex; align-items: center;">
                <div class="two wide column">
                    <div class="field">
                        <div class="onoffswitch">
                            @Html.CheckBoxFor(x => x.IsPublic, new { @class = "onoffswitch-checkbox", id = "myCheckBox"})
                            <label class="onoffswitch-label" for="myCheckBox">
                                <span class="onoffswitch-inner"></span>
                                <span class="onoffswitch-switch"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label id="createNewChannelLabel">This channel can only be joined or viewed by invite</label>
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(m => m.Name, new { placeholder = "# e.g. leads", required = "required" })
            </div>
            <div class="field">
                @Html.LabelFor(x => x.Description)
                @Html.TextBoxFor(m => m.Description)
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    <div class="actions" style="text-align: right">
        <button class="ui cancel button">
            <i class="remove icon"></i>
            Cancel
        </button>
        <button class="ui green button" form="createChanelForm" type="submit">
            Create channel
        </button>
    </div>
</div>